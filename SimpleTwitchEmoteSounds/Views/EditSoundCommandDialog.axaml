<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:vm="using:SimpleTwitchEmoteSounds.ViewModels"
                 xmlns:i="using:Avalonia.Xaml.Interactivity"
                 xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
                 xmlns:suki="https://github.com/kikipoulet/SukiUI"
                 xmlns:controls="clr-namespace:SukiUI.Controls;assembly=SukiUI"
                 xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
                 mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="550"
                 x:Class="SimpleTwitchEmoteSounds.Views.EditSoundCommandDialog"
                 x:DataType="vm:EditSoundCommandDialogViewModel"
                 Title="Edit Sound Command"
                 Width="700"
                 Height="550"
                 CanResize="True"
                 BackgroundStyle="Flat"
                 WindowStartupLocation="CenterOwner">
    <i:Interaction.Behaviors>
        <ia:EventTriggerBehavior EventName="KeyDown">
            <ia:InvokeCommandAction Command="{Binding KeyDownCommand}" PassEventArgsToCommand="True" />
        </ia:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <DockPanel LastChildFill="True">
        <!-- Bottom Action Buttons -->
        <controls:GlassCard DockPanel.Dock="Bottom" Margin="20,10,20,20">
            <WrapPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Button Margin="10" 
                        MinWidth="120"
                        Classes="Accent">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <avalonia:MaterialIcon Kind="FileMusic" Margin="0,0,5,0" />
                            <TextBlock Text="Add Sound File" />
                        </StackPanel>
                    </Button.Content>
                    <Button.Command>
                        <Binding Path="AddSoundFileCommand" />
                    </Button.Command>
                </Button>
                <Button Margin="10" 
                        MinWidth="120">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <avalonia:MaterialIcon Kind="Play" Margin="0,0,5,0" />
                            <TextBlock Text="Preview Sound" />
                        </StackPanel>
                    </Button.Content>
                    <Button.Command>
                        <Binding Path="PreviewSoundCommand" />
                    </Button.Command>
                    <Button.CommandParameter>
                        <Binding Path="SoundCommand" />
                    </Button.CommandParameter>
                </Button>
            </WrapPanel>
        </controls:GlassCard>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <controls:GlassCard Margin="20"
                              HorizontalAlignment="Stretch">
                <controls:GroupBox>
                    <controls:GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <avalonia:MaterialIcon Kind="Edit" 
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,8,0"
                                                 Foreground="{DynamicResource SukiPrimaryColor}" />
                            <TextBlock Text="Sound Command Settings" 
                                       FontWeight="Bold" 
                                       FontSize="16"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </controls:GroupBox.Header>
                    
                    <StackPanel Spacing="20">
                        <!-- Basic Info Section -->
                        <controls:GlassCard>
                            <controls:GroupBox Header="Basic Information">
                                <Grid RowDefinitions="Auto,Auto,Auto" 
                                      ColumnDefinitions="120,*" 
                                      RowSpacing="15">
                                    <!-- Name -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                        <avalonia:MaterialIcon Kind="Tag" 
                                                             VerticalAlignment="Center" 
                                                             Margin="0,0,5,0"
                                                             Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Text="Name:" 
                                                 VerticalAlignment="Center"
                                                 FontWeight="Medium" />
                                    </StackPanel>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding SoundCommand.Name}"
                                             Watermark="Sound Name"
                                             MinHeight="35" />

                                    <!-- Match Type -->
                                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                        <avalonia:MaterialIcon Kind="Target" 
                                                             VerticalAlignment="Center" 
                                                             Margin="0,0,5,0"
                                                             Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Text="Match Type:" 
                                                 VerticalAlignment="Center"
                                                 FontWeight="Medium" />
                                    </StackPanel>
                                    <ComboBox Grid.Row="1" Grid.Column="1"
                                              ItemsSource="{Binding SoundCommand.MatchTypes}"
                                              SelectedItem="{Binding SoundCommand.SelectedMatchType}"
                                              MinHeight="35" />

                                    <!-- Category -->
                                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                                        <avalonia:MaterialIcon Kind="Folder" 
                                                             VerticalAlignment="Center" 
                                                             Margin="0,0,5,0"
                                                             Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Text="Category:" 
                                                 VerticalAlignment="Center"
                                                 FontWeight="Medium" />
                                    </StackPanel>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding SoundCommand.Category}"
                                             Watermark="Sound Category"
                                             MinHeight="35" />
                                </Grid>
                            </controls:GroupBox>
                        </controls:GlassCard>

                        <!-- Settings Section -->
                        <controls:GlassCard>
                            <controls:GroupBox Header="Playback Settings">
                                <StackPanel Spacing="20">
                                    <!-- Volume -->
                                    <Grid ColumnDefinitions="120,*">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <avalonia:MaterialIcon Kind="VolumeHigh" 
                                                                 VerticalAlignment="Center" 
                                                                 Margin="0,0,5,0"
                                                                 Foreground="{DynamicResource SukiPrimaryColor}" />
                                            <TextBlock Text="Volume:" 
                                                     VerticalAlignment="Center"
                                                     FontWeight="Medium" />
                                        </StackPanel>
                                        <Grid Grid.Column="1" ColumnDefinitions="Auto,*">
                                            <NumericUpDown Grid.Column="0"
                                                           Value="{Binding SoundCommand.Volume}"
                                                           Increment="0.05"
                                                           Minimum="0"
                                                           Maximum="3"
                                                           Width="80"
                                                           FormatString="P0"
                                                           Margin="0,0,10,0" />
                                            <Slider Grid.Column="1"
                                                    Minimum="0.0"
                                                    Maximum="3.0"
                                                    Value="{Binding SoundCommand.Volume}"
                                                    TickFrequency="0.05"
                                                    TickPlacement="BottomRight"
                                                    IsSnapToTickEnabled="True" />
                                        </Grid>
                                    </Grid>

                                    <!-- Play Chance -->
                                    <Grid ColumnDefinitions="120,*">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <avalonia:MaterialIcon Kind="Dice6" 
                                                                 VerticalAlignment="Center" 
                                                                 Margin="0,0,5,0"
                                                                 Foreground="{DynamicResource SukiPrimaryColor}" />
                                            <TextBlock Text="Play Chance:" 
                                                     VerticalAlignment="Center"
                                                     FontWeight="Medium" />
                                        </StackPanel>
                                        <Grid Grid.Column="1" ColumnDefinitions="Auto,*">
                                            <NumericUpDown Grid.Column="0"
                                                           Value="{Binding SoundCommand.PlayChance}"
                                                           Increment="0.05"
                                                           Minimum="0"
                                                           Maximum="1"
                                                           Width="80"
                                                           FormatString="P0"
                                                           Margin="0,0,10,0" />
                                            <Slider Grid.Column="1"
                                                    Value="{Binding SoundCommand.PlayChance}"
                                                    Minimum="0.0"
                                                    Maximum="1.0"
                                                    TickFrequency="0.05"
                                                    TickPlacement="BottomRight"
                                                    IsSnapToTickEnabled="True" />
                                        </Grid>
                                    </Grid>
                                    
                                    <!-- Cooldown -->
                                    <Grid ColumnDefinitions="120,*">
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <avalonia:MaterialIcon Kind="Clock" 
                                                                 VerticalAlignment="Center" 
                                                                 Margin="0,0,5,0"
                                                                 Foreground="{DynamicResource SukiPrimaryColor}" />
                                            <TextBlock Text="Cooldown:" 
                                                     VerticalAlignment="Center"
                                                     FontWeight="Medium" />
                                        </StackPanel>
                                        <Grid Grid.Column="1" ColumnDefinitions="Auto,*">
                                            <NumericUpDown Grid.Column="0"
                                                           Value="{Binding SoundCommand.CooldownSeconds}"
                                                           Increment="0.5"
                                                           Minimum="0"
                                                           Maximum="15"
                                                           Width="80"
                                                           FormatString="N1"
                                                           Margin="0,0,10,0" />
                                            <Slider Grid.Column="1"
                                                    Value="{Binding SoundCommand.CooldownSeconds}"
                                                    Minimum="0.0"
                                                    Maximum="15.0"
                                                    TickFrequency="0.5"
                                                    TickPlacement="BottomRight"
                                                    IsSnapToTickEnabled="True" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </controls:GroupBox>
                        </controls:GlassCard>

                        <!-- Sound Files Section -->
                        <controls:GlassCard>
                            <controls:GroupBox>
                                <controls:GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <avalonia:MaterialIcon Kind="FileMusic" 
                                                             VerticalAlignment="Center" 
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Text="Sound Files" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </controls:GroupBox.Header>
                                
                                <StackPanel>
                                    <!-- Header -->
                                    <Grid ColumnDefinitions="*,150,100"
                                          Margin="0,5,0,10">
                                        <TextBlock Grid.Column="0"
                                                   Text="File Name"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Grid.Column="1"
                                                   Text="Play Percentage"
                                                   FontWeight="Bold"
                                                   TextAlignment="Center"
                                                   Foreground="{DynamicResource SukiPrimaryColor}" />
                                        <TextBlock Grid.Column="2"
                                                   Text="Actions"
                                                   FontWeight="Bold"
                                                   TextAlignment="Center"
                                                   Foreground="{DynamicResource SukiPrimaryColor}" />
                                    </Grid>

                                    <!-- Sound Files List -->
                                    <ItemsControl ItemsSource="{Binding SoundCommand.SoundFiles}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <controls:GlassCard Margin="0,2">
                                                    <Grid ColumnDefinitions="*,150,100"
                                                          Margin="10,5">
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding FileName}"
                                                                   VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <Grid Grid.Column="1"
                                                              ColumnDefinitions="60,*"
                                                              Margin="5,0">
                                                            <NumericUpDown Grid.Column="0"
                                                                           Value="{Binding Percentage}"
                                                                           Increment="0.05"
                                                                           Minimum="0"
                                                                           Maximum="1"
                                                                           Width="60"
                                                                           ShowButtonSpinner="False"
                                                                           FormatString="P0"
                                                                           TextAlignment="Center"
                                                                           Margin="0,0,5,0" />
                                                            <Slider Grid.Column="1"
                                                                    Value="{Binding Percentage}"
                                                                    TickFrequency="0.05"
                                                                    Minimum="0.0"
                                                                    Maximum="1.0"
                                                                    VerticalAlignment="Center"
                                                                    TickPlacement="None"
                                                                    IsSnapToTickEnabled="True" />
                                                        </Grid>
                                                        <Button Grid.Column="2"
                                                                Margin="5,0"
                                                                HorizontalAlignment="Center">
                                                            <Button.Content>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <avalonia:MaterialIcon Kind="Delete" 
                                                                                         Margin="0,0,3,0"
                                                                                         Foreground="{DynamicResource SukiDangerColor}" />
                                                                    <TextBlock Text="Remove" />
                                                                </StackPanel>
                                                            </Button.Content>
                                                            <Button.Command>
                                                                <Binding Path="((vm:EditSoundCommandDialogViewModel)DataContext).RemoveSoundFileCommand" RelativeSource="{RelativeSource AncestorType=suki:SukiWindow}" />
                                                            </Button.Command>
                                                            <Button.CommandParameter>
                                                                <Binding />
                                                            </Button.CommandParameter>
                                                        </Button>
                                                    </Grid>
                                                </controls:GlassCard>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </controls:GroupBox>
                        </controls:GlassCard>
                    </StackPanel>
                </controls:GroupBox>
            </controls:GlassCard>
        </ScrollViewer>
    </DockPanel>
</suki:SukiWindow>